<h1>Editing Book</h1>
 <% if @book.errors.any? %>
<div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
 <% if @book.errors.any? %>
   <div class="field">
 <div class="error_field">
   <label>Title</label>
   </div>
   <div class="error_field">
   <%= f.text_field :title %>
   </div>
 </div>

 <div class="field">
 <div class="error_field">
    <label>Body</label>
   </div>
 <div class="error_field">
   <%= f.text_area :body %>
 </div>
 </div>

 <div class="actions">
 <%= f.submit 'Update Book' %>
</div>
   <% else %>

   <div class="field">
   <label>Title</label>
   <%= f.text_field :title %>
 </div>

 <div class="field">
    <label>Body</label>
   <%= f.text_area :body %>
 </div>

 <div class="actions">
   <%= f.submit 'Update Book' %>
   </div>
 <% end %>
<% end %>

<span><%= link_to 'Show', "/books/#{@book.id}" %></span>
|
<span><%= link_to 'Back', "/books" %></span>
