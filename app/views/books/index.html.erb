<h1>Books</h1>

<table>
    <thead>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
       <td> <%= book.title %> </td>
       <td><%= book.body %> </td>
       <td><%= link_to 'Show', "/books/#{book.id}" %></td>
       <td><%= link_to 'Edit',edit_book_path(book.id) %></td>
       <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    <% end %>
    </tbody>
</table>

<h2>New book</h2>
 <% if @book.errors.any? %>
<div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: Book.new do |f| %>
 <% if @book.errors.any? %>
 <div class="field">
 <div class="error_field">
 <label>Title</label>
   </div>
   <div class="error_field">
   <%= f.text_field :title %>
   </div>
 </div>

 <div class="field">
 <div class="error_field">
   <label>Body</label>
   </div>
 <div class="error_field">
   <%= f.text_area :body %>
 </div>
 </div>

 <div class="actions">
   <%= f.submit 'Create Book' %>
</div>
   <% else %>

   <div class="field">
   <label>Title</label>
   <%= f.text_field :title %>
 </div>

 <div class="field">
   <label>Body</label>
   <%= f.text_area :body %>
 </div>

 <div class="actions">
   <%= f.submit 'Create Book' %>

 </div>
 <% end %>
<% end %>